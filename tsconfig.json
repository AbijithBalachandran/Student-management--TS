{
    "compilerOptions": {
     "target": "ES2020",
     "module": "CommonJS",
     "moduleResolution": "node",
     "lib": ["ES2020"],
     "sourceMap": true,
     "strict": true,
     "noImplicitAny": true,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "allowJs": true,
     "rootDir": "./src",
     "outDir": "./dist",
     "typeRoots": ["./types","./node_modules/@types"]
    },
    "include": ["src/**/*", "src/controllers", "src/db", "router", "src/index.ts", "src/controllers"],
    "exclude": ["node_modules"]
   }

