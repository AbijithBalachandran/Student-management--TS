<style>

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');
*{
    font-family: 'Poppins', sans-serif;
    
}

.wrapper{
    padding: 0 20px 0 20px;
}
.main{
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}
.side-image{
    background-image: url("images/HEADER_book-series.png");
    background-position: center;
    background-size: cover; 
    background-repeat: no-repeat;
    border-radius: 10px 0 0 10px;
    position:relative; 
}
.row{
  width:  900px;
  height:550px;
  border-radius: 10px;
  background: #faf9f9;
  padding: 0px;
  box-shadow: 5px 5px 10px 1px rgba(0,0,0,0.2);
}
.text{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.text p{
    color: #fff;
    font-size: 20px; 
}
i{
    font-weight: 400;
    font-size: 15px;
}
.right{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.input-box{
  width: 330px;
  box-sizing: border-box;
}

.input-box header{
    font-weight: 700;
    text-align: center;
    margin-bottom: 45px;
}
.input-field{
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 0 10px 0 10px;
}
.input{
    height: 45px;
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    outline: none;
    margin-bottom: 20px;
    color: #40414a;
}
.input-box .input-field label{
    position: absolute;
    top: 10px;
    left: 10px;
    pointer-events: none;
    transition: .5s;
}
.input-field input:focus ~ label
   {
    top: -10px;
    font-size: 13px;
  }
  .input-field input:valid ~ label
  {
   top: -10px;
   font-size: 13px;
   color: #5d5076;
 }
 .input-field .input:focus, .input-field .input:valid{
    border-bottom: 1px solid #743ae1;
 }
 .submit{
    border: none;
    outline: none;
    height: 45px;
    background: #ececec;
    border-radius: 5px;
    transition: .4s;
 }
 .submit:hover{
    background: rgba(37, 95, 156, 0.937);
    color: #fff;
 }
 .signin{
    text-align: center;
    font-size: small;
    margin-top: 25px;
}
span a{
    text-decoration: none;
    font-weight: 700;
    color: #000;
    transition: .5s;
}
span a:hover{
    text-decoration: underline;
    color: #000;
}
@media only screen and (max-width: 768px){
    .side-image{
        border-radius: 10px 10px 0 0;
    }
    img{
        width: 35px;
        position: absolute;
        top: 20px;
        left: 47%;
    }
    .text{
        position: absolute;
        top: 50%;
        text-align: center;
        display: none;
    }
    .text p, i{
        font-size: 16px;
    }
    .row{
        max-width:420px;
        width: 100%;
    }
}


</style>





<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">



  <div class="wrapper">
    <div class="container main">
        <div class="row">
            <div class="col-md-6 side-image ">
                <div class="text ">
                  <!-- <h2 class="text-success">EGMA-Education</h2> -->
                    <p>“Education is the most powerful weapon which you can use to change the world.”<br> <i> -Nelson Mandela</i></p>
                    
                </div>
                
            </div>
            <div class="col-md-6 right">
                
                <form action=" " method="POST" id="SignupForm">


                    <input type="hidden" name="user_id" value="<%= student._id  %>">
            
                    <div class="input-box">
                        <div class="input-field">
                            <input type="text" class="input" name="name" id="name" value="<%= student.name  %>" required >
                            <label for="name">Username</label>
                        </div>
                        <div class="input-field">
                            <input type="email" class="input" name="email" id="email" value="<%= student.email  %>" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field">
            
                            <input type="number" class="input" name="mobile" id="password" value="<%= student.mobile  %>" required>
                            <label for="number">Phone Number</label>
                        </div>
                        <div class="input-field">
            
                            <input type="submit" class="submit" value="Update Profile">
                        </div>
            
                    </div>

                     

                    <div class="text-center mb-1">
                        <span id="invalid-email" class="text-danger" style="display: none;">Please enter a valid email</span>
                    </div>
                    
                    <div class="text-center mb-1">
                        <span id="invalid-pass" class="text-danger" style="display: none;">mobile must contain minimum 10 characters</span>
                    </div>
        
                    <% if(locals.status == 'success') {%>
                    <div class="text-center">
                        <span class="">Signed up Successfully. Click here to  </span>
                        <a class="link-success" href="/login">Login</a>
                    </div>
                    <% }else if (locals.status == 'failed'){ %>
                        <div class="text-center">
                            <span class="">Signup failed</span>
                        </div>
                    <% }else if (locals.exist == 'true'){ %>
                        <div class="text-center">
                            <span class="">User already exists. Try </span>
                            <a class="link-success" href="/login">Login</a>
                        </div>
                    <% } %>
   

            
                </form>
            </div>
            
        </div>
    </div>
</div>

<script src="/js/script.js"></script>

