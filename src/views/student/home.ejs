<% include('../layouts/header.ejs') %>

<style>
    
* {
      margin: 0;
      padding: 0;
  
      box-sizing: border-box;
      
  }
  body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
  }
    main.table {
      width: 82vw;
      height: 90vh;
      background-color: #fff5;
  
      /* backdrop-filter: blur(7px); */
      box-shadow: 0 .4rem .8rem #0005;
      border-radius: .8rem;
  
      overflow: hidden;
  }
    .table_header {
      background-color: #fff4;
      color: #000000;
      padding: 15px 20px;
    }
    
    .table_header h3 {
      margin: 0;
      font-size: 1.2em;
    }
    .table__body {
      width: 95%;
      max-height: calc(89% - 1.6rem);
      background-color: #fffb;
  
      margin: .8rem auto;
      border-radius: .6rem;
  
      overflow: auto;
      overflow: overlay;
  }
  .table__body::-webkit-scrollbar{
      width: 0.5rem;
      height: 0.5rem;
  }
  
  .table__body::-webkit-scrollbar-thumb{
      border-radius: .5rem;
      background-color: #0004;
      visibility: hidden;
  }
  
  .table__body:hover::-webkit-scrollbar-thumb{ 
      visibility: visible;
  }
    
    table, th, td {
      border-collapse: collapse;
      padding: 1rem;
      text-align: left;
  }
  
  thead th {
      position: sticky;
      top: 0;
      left: 0;
      
      cursor: pointer;
      text-transform: capitalize;
  }
  tbody tr:nth-child(even) {
      background-color: #0000000b;
  }
  
  tbody tr {
      --delay: .1s;
      transition: .5s ease-in-out var(--delay), background-color 0s;
  }
  
  tbody tr.hide {
      opacity: 0;
      transform: translateX(100%);
  }
  
  tbody tr:hover {
      background-color: #fff6 !important;
  }
    td a {
      display: inline-block;
      padding: 7px 15px;
      background-color: #28a745;
      color: #fff;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      text-decoration: none; /* Adjusted to remove underline */
    }
    
    td a:hover {
      background-color: #218838;
    }
    
    /* Logout link styles */
    a[href="/logout"] {
      z-index: 1;
      position: absolute;
      text-decoration: none;
      color: #8f0404;
      font-weight: bold;
      font-size: larger;
      margin-top: 20px; /* Adjust the top margin as needed */
      margin-left: 20px; /* Adjust the right margin as needed */
    }
    


</style>

<a href="/logout">LogOut</a>


<main class="table">

<section class="table_header">
  <h2>Welcome, <%=student.name %></h3>   
</section>

<session class="table_body">
      <table>
            <thead>
                  <tr>
                        <th>Student Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                  </tr>
            </thead>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.mobile %></td>
            <td><a href="/edit/<%= student._id %>">EDIT</a></td>
            <tbody>
                  
            </tbody>
            
           </table>
</session>

</main>




